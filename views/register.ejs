<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheets/register.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <title>Login</title>
</head>
<body>
    

    

    <section class="container">
        <header>Register</header>
        <form id="registerForm" action="/register/submit" method="post" class="form">
            <div class="input-box">
                <label for="firstname">First Name</label>
                <input type="text" name="first_name" id="first_name" required="">
            </div>
            <div class="input-box">
                <label for="">Last Name</label>
                <input type="text" name="last_name" id="last_name" required="">
            </div>
                <div class="input-box">
                    <label for="username">Username</label>
                    <input type="text" name="username" id="username" required="">
                </div>
            <div class="input-box">
                <label for="email">Email</label>
                <input type="text" name="email" id="email" required="">
            </div>
            <div class="gender-box">
                <h3>Gender</h3>
                <div class="gender-option">
                <div class="gender">
                    <input type="radio" id="check-male" name="gender" value="male" checked />
                    <label for="check-male">Male</label>
                </div>
                <div class="gender">
                    <input type="radio" id="check-female" name="gender" value="female" />
                    <label for="check-female">Female</label>
                </div>
            <div class="input-box">
                <label for="phone">Phone No</label>
                <input type="text" name="phone" id="phone" required="">
            </div>
                <div class="input-box">
                    <label for="dob">Date of Birth</label>
                    <input type="date" name="dob" id="dob" required="" value="" placeholder="">
                    
                </div>
            <div class="input-box">
                <label for="password">Password</label>
                <input type="password" name="pwd" id="pwd" required="">
            </div>
            <div class="input-box">
                <label for="confirmpwd">Confirm Password</label>
                <input type="password" name="confirmpwd" id="confirm" required="">
            </div>
                <div class="input-box">
                <label for="JobDataList " class="form-label">PREFERENCE OF JOBS(Optional)</label>
                <input name="preference" id="preference" class="form-control" list="jobOptions" id="jobDataList" placeholder="Select any preferred job category...">
                <datalist id="jobOptions">
                <option value="CATERING">
                <option value="CLEANING">
                <option value="CONSTRUCTION">
                <option value="ELECTRIC AND PLUMBING"></option>
                <option value="EVENT MANAGEMENT"></option>
                <option value="HOUSEHOLD">
                <option value="TRANSPORTATION AND DELIVERY">                     
                <option value="OTHERS">
                </datalist>
            <button type="submit" class="login-button">
                <span></span>
                <span></span>
                <span></span>
                <span></span>
                SUBMIT</button>
            </section>
            </form>
            <section class="links">
                <div class="jobscorner">
                    <h1  class="jobscorner">JOBS<span>CORNER</span></h1>
                </div>
                <p style="left: 20px;"><a href="/login">Click here to login....!</a></p>
                <div class="regm" id="registerMessage"></div>
            </section>
            <script>
                $(document).ready(function () {
                    $('#registerForm').submit(function (e) {
                    e.preventDefault();
                    $.post($(this).attr('action'), $(this).serialize())
                        .done(function (data) {
                          // Successful login, redirect or handle as needed
                        $('#registerMessage').html('registration successfull...Login to continue')
                        })
                        .fail(function (xhr) {
                        if (xhr.status === 400) {
                            // Handle specific 400 Bad Request condition
                            $('#registerMessage').html(xhr.responseJSON.error);
                        } else if (xhr.status === 401) {
                            // Handle specific 401 Unauthorized condition
                            $('#registerMessage').html(xhr.responseJSON.error);
                        } else {
                            // Handle other failure conditions
                            $('#registerMessage').html('Login failed ');
                        }
                        });
                    });
                });
                
            </script>
            
    </div>
</body>
</html>